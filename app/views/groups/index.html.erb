<p style="color: green"><%= notice %></p>

<h1>Groups</h1>
<br>
<p class="btn btn-warning"><%= link_to "New group", new_group_path, class: "boton"%></p>
<br>
<br>
<table class= "table table-stripped">
  <thead>
    <tr>
      <th>Group name</th>
      <th>Crew</th>
      <th>Debut date</th>
      <th>Group type</th>
      <th>Total Presentations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.crew_q %></td>
        <td><%= post.debut_date %></td>
        <td><%= post.group_type %></td>
        <td><%= post.concerts.count%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_group_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


